.operations {
  margin: 2rem auto;
  padding: 0 2rem;
}

.operations .weui-btn {
  margin: 5px;
  height: 46px;
}

.operations .iconfont {
  font-size: 24px;
  line-height: 46px;
}


.container > .outWrapper {
  border: 1px solid #b4d3b2;
}

.container .wrapper {
  padding: 10px;
  background-color: #c5ccc5;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.boardGame {
  display: flex;
  flex-direction: column;
}

.boardGame .row {
  display: flex;
  flex-direction: row;
  height: 100%;
}

.row .cell {
  flex: 1;
  border-bottom: 1px solid #d3dee8;
  border-right: 1px solid #d3dee8;
}

.boardGame .row:first-child .cell {
  border-top: 1px solid #d3dee8;
}

.boardGame .row .cell:first-child {
  border-left: 1px solid #d3dee8;
}

.container .piece {
  position: absolute;
  border: 1px solid black;
  transform: scale(0.85);
}

@keyframes pulse {
  0% {
    box-shadow: 0 0 0 0 rgba(255, 0, 0, 0.8);
  }
  70% {
    box-shadow: 0 0 0 0.6rem rgba(255, 0, 0, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(255, 0, 0, 0);
  }
}

.last-step {
  box-shadow: 0 0 0 0.4rem rgba(255, 0, 0, 0.4);
  animation: pulse 1.2s infinite;
}
